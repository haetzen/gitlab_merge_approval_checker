{
    "manifest_version": 3,
    "name": "GitLab Merge Approval Checker",
    "version": "1.0",
    "description": "Only enables merge button when all reviewers have approved",
    "icons": {
        "48": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.gitlab.com/*/merge_requests/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "permissions": []
}